@model IEnumerable<UniConn_CS.Models.POST>

@{
    ViewBag.Title = "My Home";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-black">Welcome Back, @Session["UserName"]! 👋</h2>
            <p class="text-muted">Here is what's happening in your communities.</p>
        </div>
        <a href="/POSTs/Create" class="btn btn-warning rounded-pill px-4 fw-bold">
            <i class="fas fa-plus me-2"></i>New Post
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 rounded-4 border border-secondary" style="background: #151517;">
            <div class="mb-3 text-warning opacity-75">
                <i class="fas fa-satellite fa-4x"></i>
            </div>
            <h3 class="text-white fw-bold">It's quiet here...</h3>
            <p class="text-muted fs-5">You haven't joined any communities yet.</p>
            <p class="text-muted small">Join communities to see their exclusive posts here!</p>

            <a href="/COMMUNITIEs/Index" class="btn btn-outline-warning rounded-pill px-5 py-2 mt-3 fw-bold">
                Explore Communities <i class="fas fa-arrow-right ms-2"></i>
            </a>

            <div class="mt-4">
                <span class="text-muted small">Or verify the </span>
                <a href="/POSTs/Index" class="text-info text-decoration-none">Global Campus Feed</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card border-0 mb-4 shadow-lg p-4" style="background: #151517; border-radius: 20px;">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <img src="https://ui-avatars.com/api/?name=@(item.STUDENTS?.first_name)+@(item.STUDENTS?.last_name)&background=random"
                                     class="rounded-circle" width="50" height="50" alt="User">
                            </div>
                            <div>
                                <h6 class="text-white mb-0 fw-bold">
                                    @(item.STUDENTS != null ? item.STUDENTS.first_name + " " + item.STUDENTS.last_name : "Unknown User")
                                </h6>
                                <small class="text-warning">
                                    <i class="fas fa-users me-1"></i> @item.community_name
                                </small>
                                <span class="text-muted small mx-2">•</span>
                                <small class="text-muted">@item.creation_date.ToString("dd MMM HH:mm")</small>
                            </div>
                        </div>

                        <h5 class="text-white fw-bold mb-2">@item.title</h5>
                        <p class="text-light opacity-75 fs-5">@item.content</p>

                        @if (!string.IsNullOrEmpty(item.image_url))
                        {
                            <div class="mt-3">
                                <img src="@item.image_url" class="img-fluid rounded-4 w-100" style="max-height: 400px; object-fit: cover;" alt="Post Image">
                            </div>
                        }


                    </div>
                }
            </div>

            <div class="col-lg-4 d-none d-lg-block">
                <div class="card bg-dark border-secondary p-4 rounded-4 sticky-top" style="top: 100px;">
                    <h5 class="text-white fw-bold mb-3">Quick Links</h5>
                    <a href="/POSTs/Index" class="d-block text-decoration-none text-muted mb-2 p-2 rounded hover-bg">
                        <i class="fas fa-globe me-2 text-info"></i> Post Management Menu
                    </a>
                    <a href="/COMMUNITIEs/Index" class="d-block text-decoration-none text-muted mb-2 p-2 rounded hover-bg">
                        <i class="fas fa-users me-2 text-warning"></i> Find Communities
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-bg:hover {
        background: rgba(255,255,255,0.05);
        color: white !important;
    }
</style>