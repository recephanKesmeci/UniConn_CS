@model UniConn_CS.Models.STUDENTS
@{
    ViewBag.Title = "Profil";
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="custom-card text-center p-4 shadow-sm border-0" style="background: #fff; border-radius: 20px;">
            <div style="width: 140px; height: 140px; border-radius: 50%; border: 4px solid #ff9800; margin: 0 auto 15px; display: flex; align-items: center; justify-content: center; background: #f8f9fa;">
                <i class="fa-solid fa-user fa-5x text-muted"></i>
            </div>
            <h3 class="fw-bold mb-0">@Model.first_name @Model.last_name</h3>
            <p class="text-muted">ID: @Model.student_id</p>
            <p class="text-primary fw-bold">TED University</p>

            <div class="d-flex justify-content-around mt-4">
                <div><h6 class="fw-bold mb-0">12</h6><small>Comm.</small></div>
                <div><h6 class="fw-bold mb-0">45</h6><small>Events</small></div>
                <div class="text-warning"><h6 class="fw-bold mb-0">1250</h6><small>Points</small></div>
            </div>
            <button class="btn btn-outline-dark w-100 rounded-pill mt-4">Edit Profile</button>
        </div>
    </div>
    <div class="col-md-8">
        <div class="custom-card p-4 shadow-sm border-0 mb-4" style="background: #fff; border-radius: 20px;">
            <h5 class="fw-bold mb-4">My Communities</h5>
            <div class="row">
                <div class="col-md-4 mb-2">
                    <div class="p-3 border rounded text-center bg-light">
                        <small class="fw-bold d-block">Robotics Society</small>
                        <span class="badge bg-warning">ADMIN</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>