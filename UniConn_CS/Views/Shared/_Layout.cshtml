<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UniConn</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <i class="fa-solid fa-shapes"></i> UNI<span>CONN</span>
            </div>

            <ul class="list-unstyled components">
                @if (Session["UserID"] != null)
                {
                    @* 1. Home Linki *@
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        <a href="/Home/Index"><i class="fa-solid fa-house"></i> Home</a>
                    </li>

                    @* 2. Communities Linki *@
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "COMMUNITIES" ? "active" : "")">
                        <a href="/COMMUNITIES/Index"><i class="fa-solid fa-users"></i> Communities</a>
                    </li>

                    @* 3. Events Linki *@
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "EVENTS" ? "active" : "")">
                        <a href="/EVENTS/Index"><i class="fa-solid fa-calendar-check"></i> Events</a>
                    </li>


                    @* 5. Profil Sayfası (Yeni eklediğimiz Controller) *@
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Profile" ? "active" : "")">
                        <a href="/Profile/Index"><i class="fa-solid fa-user"></i> Profile</a>
                    </li>

                    @* 6. Settings Sayfası *@
          
                }
                else
                {
                    <li><a href="/Account/Login"><i class="fa-solid fa-right-to-bracket"></i> Giriş Yap</a></li>
                }
            </ul>
        </nav>

        <div id="content">
            <div class="topbar">
                <div class="search-box">
                    <input type="text" placeholder="Search communities, events...">
                </div>
                <div class="user-info">
                    @if (Session["UserID"] != null)
                    {
                        <span class="me-2 fw-bold">@Session["UserName"]</span>
                        <a href="/Account/Logout" class="text-danger"><i class="fa-solid fa-power-off"></i></a>
                    }
                </div>
            </div>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>