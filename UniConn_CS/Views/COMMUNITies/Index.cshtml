@model IEnumerable<UniConn_CS.Models.COMMUNITY>
@{
    ViewBag.Title = "Topluluklar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Explore Communities</h2>
    <a href="/COMMUNITIES/Create" class="btn btn-warning text-white rounded-pill px-4">+ Create New</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="custom-card d-flex flex-column h-100">
                <div class="d-flex align-items-center mb-3">
                    <div class="card-icon bg-light text-primary">
                        <i class="fa-solid fa-users"></i>
                    </div>
                    <div>
                        <h5 class="card-title">@item.description</h5>
                        @* Tarih hatasını da burada düzelttik *@
                        <p class="card-meta">Kuruluş: @item.creation_date.ToString("yyyy")</p>
                    </div>
                </div>
                <p class="text-muted small flex-grow-1">Bu topluluğa katılarak etkinliklerden haberdar olabilirsin.</p>
                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <span class="badge bg-success bg-opacity-10 text-success">Aktif</span>
                    <a href="/COMMUNITIES/Details/@item.community_name" class="btn-action">İncele -></a>
                </div>
            </div>
        </div>
    }
</div>