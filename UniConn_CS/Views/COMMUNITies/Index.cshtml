@model IEnumerable<UniConn_CS.Models.COMMUNITY>
@{ ViewBag.Title = "Explore Communities"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-black">Explore Communities</h2>
            <p class="text-muted">Discover groups, join discussions, and attend events.</p>
        </div>
        <a href="@Url.Action("Create", "COMMUNITies")" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow-lg community-card">
                    <div class="card-body p-4 d-flex flex-column">
                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-box me-3">
                                <span class="fw-bold text-white fs-4">@item.community_name.Substring(0, 1)</span>
                            </div>
                            <div>
                                <h5 class="fw-bold text-white mb-1">@item.community_name</h5>
                                <small class="text-info opacity-75">Est. @item.creation_date.Year</small>
                            </div>
                        </div>

                        <p class="text-muted flex-grow-1">
                            @(item.description != null && item.description.Length > 100 ? item.description.Substring(0, 100) + "..." : item.description)
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top border-secondary border-opacity-25">
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">Active</span>

                            <a href="@Url.Action("Details", "COMMUNITies", new { name = item.community_name })" class="btn btn-outline-light rounded-pill px-4 btn-sm fw-bold hover-orange">
                                İncele <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .community-card {
        background: #151517 !important;
        border: 1px solid rgba(255, 255, 255, 0.05) !important;
        border-radius: 20px !important;
        transition: 0.3s;
    }

        .community-card:hover {
            transform: translateY(-5px);
            border-color: #ff8c00 !important;
        }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 15px;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hover-orange:hover {
        background-color: #ff8c00 !important;
        border-color: #ff8c00 !important;
        color: #000 !important;
    }

    .text-muted {
        color: #a0a0a0 !important;
    }
</style>